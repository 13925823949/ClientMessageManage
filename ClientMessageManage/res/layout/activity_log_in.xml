<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2297dc"
    tools:context=".LogInActivity" >

        <TextView
            android:id="@+id/decollator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center" 
            android:layout_marginBottom="15dp"
            android:textColor="#ffffff"
            android:text="▏" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/password"
            android:layout_below="@+id/password"
            android:layout_marginTop="5dip"
            android:textColor="#ffffff"
            android:text="记住密码" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/password"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dip"
            android:textColor="@drawable/selector_textview"
            android:text="忘记密码" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/password"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="30dip"
            android:textColor="@drawable/selector_textview"
            android:text="注册账号" />

        <EditText
            android:id="@+id/userId"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_marginBottom="37dp"
            android:background="@drawable/fillet_shape"
            android:ems="10"
            android:hint="输入账号"
            android:inputType="number">
            <requestFocus />
            </EditText>

        <Button
            android:id="@+id/logInButton"
            android:layout_width="250dip"
            android:layout_height="30dip"
            android:layout_alignLeft="@+id/checkBox1"
            android:layout_below="@+id/checkBox1"
            android:background="@drawable/fillet_shape_button"
            android:text="登录" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/userId"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:text="人脉管理助手"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/fillet_shape"
            android:ems="10"
            android:hint="输入密码"
            android:inputType="textPassword" />

</RelativeLayout>
